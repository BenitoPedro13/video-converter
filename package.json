{
  "name": "pnpm-monorepo-v2",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "prepare": "husky",
    "lint": "pnpm -r lint",
    "format": "prettier --write .",
    "test": "pnpm -r test",
    "dev": "pnpm --filter web-app dev",
    "build": "pnpm --filter web-app build",
    "start": "pnpm --filter web-app start",
    "docker:dev": "docker compose --profile development up -d",
    "docker:dev:down": "docker compose --profile development down -v",
    "docker:prod": "docker compose --profile production up -d --build",
    "docker:prod:down": "docker compose --profile production down -v",
    "docker:logs": "docker compose logs -f",
    "db:shell": "docker compose exec postgres psql -U postgres -d auth_db"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "engines": {
    "node": ">=22.17.1"
  },
  "packageManager": "pnpm@10.23.0",
  "devDependencies": {
    "@commitlint/cli": "^19.5.0",
    "@commitlint/config-conventional": "^19.5.0",
    "@eslint/js": "^9.14.0",
    "eslint": "^9.14.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.2.1",
    "eslint-plugin-react": "^7.37.2",
    "eslint-plugin-react-hooks": "^5.0.0",
    "eslint-plugin-react-refresh": "^0.4.14",
    "globals": "^15.11.0",
    "husky": "^9.1.6",
    "lint-staged": "^15.2.10",
    "prettier": "^3.3.3",
    "typescript-eslint": "^8.12.2"
  },
  "lint-staged": {
    "**/*.{js,ts,tsx}": [
      "eslint --fix"
    ],
    "**/*": "prettier --write --ignore-unknown"
  }
}
